<!DOCTYPE html>
<html>

<head>
    <link rel="manifest" href="./manifest.json">
    <title>RB TIMED AUCTION</title>
    <link type="text/css" rel="stylesheet" href="assets/css/style.css">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
</head>

<body class="body USD">
    <div class="js--tal">

        <div class="h-hide-mobile">
            <!-- @include '/assets/components/layout/header' -->
        </div>

        <div class="l-main-container">
            <div class="js--nav-pin-waypoint"></div>
            <div class="l-pin-header-wrapper js--pinned-header">
                <div class="l-pin-header-inner">
                    <div class="l-scroll-revealable-header h-hide-mobile" v-bind:class="{'s-showWholeHeader' : showSecondaryHeader}">
                        <!-- @include '/assets/components/components/navigation_tabs' -->
                    </div>
                    <div class="c-navigation__lot-details g-wrapper">
                        <button class="o-button__transparent o-button__narrow" v-on:click="gotoPage('index')"><i class="icon-Back-Arrow"></i><span class="h-hide-mobile"> Back</span></button>
                        <div class="g-cell t-h2 t-bold t-lh-300 h-color-white h-ta-center"><span class="t-bold">Lot 5001</span><span class="h-hide-mobile"> - 2012 Cummins C150D6R-A041K83 150 KW T/A Gen Set</span></div>
                    </div>
                </div>
            </div>

            <div class="c-lot-details" v-for="(lot, index) in findOneLot()">

                <div class="g-wrapper">
                    <div class="g-cell g-cell__two-thirds g-mob--full">
                        <div class="g-wrapper">
                            <div class="g-cell c-lot-details--photo-area g-mob--full">
                                <div class="c-lot-details--lot-photo">
                                    <img v-bind:src="lot.photos[activeThumbnail].src" alt="">
                                </div>
                                <ul class="c-lot-details--lot-thumbnails g-mob--full">
                                    <li v-for="(photo,index) in lot.photos" class="li c-lot-details--lot-thumbnail" v-on:click="setActiveThumbnail(index)" v-bind:class="{'s-active': index === activeThumbnail}">
                                        <img v-bind:src="photo.src" alt="">
                                    </li>
                                </ul>
                            </div>
                            <div class="g-cell c-lot-details--details g-mob--full g-mob-wrapper">
                                <div class="h-hide-desktop g-cell__full g-mob--full g-mob-order--first t-h2 t-bold h-mb-100 h-mt-100">
                                    {{ lot.description }}
                                </div>
                                <div class="g-mob--full g-cell__full g-mob-order--last c-lot-detail--text-fields">
                                    <!-- @include '/assets/components/components/lot_text-fields' -->
                                </div>
                                <div class="g-mob--full g-cell__full g-mob-order--first c-lot-details--watch-area" v-if="bidder.number != null">
                                    <!-- @include '/assets/components/components/watch-button' -->
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="c-lot-details--bidding g-cell g-mob--full">
                        <!-- @include '/assets/components/components/lot_bid-area' -->
                        <!-- @include '/assets/components/components/lot_bid-buttons' -->
                        <!-- @include '/assets/components/components/lot_bid-messages' -->
                        <!-- @include '/assets/components/components/lot_bid-history' -->
                    </div>
                </div>
            </div>

        </div>

        <!-- @include '/assets/components/modals/confirmBid' -->
        <!-- @include '/assets/components/modals/confirmMaxBid' -->
        <!-- @include '/assets/components/layout/footer' -->

    </div>
    
    <!-- @include '/assets/components/components/js-includes' -->
</body>

</html>